<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title_forum_post"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:id="@+id/title_forum_post"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title_forum_post"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:id="@+id/movie_title_forum_post"
        app:layout_constraintTop_toBottomOf="@id/title_forum_post"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/movie_title_forum_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/content_forum_post"
        android:maxLines="5"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author_and_date_forum_post"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/content_forum_post"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/author_forum_post"
        />

    <TextView
        android:id="@+id/latest_message_date_forum_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latest_message_date_forum_post"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/author_forum_post"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_count_forum_post"
        android:text="message_count_forum_post"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_forum_post"
        />



</androidx.constraintlayout.widget.ConstraintLayout>