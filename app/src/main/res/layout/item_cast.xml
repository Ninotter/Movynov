<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cast_item_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="210dp"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cast_item_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/cast_item_profile_image"
            android:layout_width="140dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/cast_item_name"
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cast_item_profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:text="Name Surname"
            android:gravity="center"

            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cast_item_playing_as_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cast_item_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/cast_item_name"
            app:layout_constraintBottom_toTopOf="@+id/cast_item_character_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:text="@string/cast_item_playing_as"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/cast_item_character_name"
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cast_item_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:text="@string/cast_item_playing_as"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>